program:
    | stmts
stmts:
    | (stmt | declaration)+
stmt:
    | assignment

    | for_stmt
    | loop_stmt
    | exit_stmt
    | if_stmt
    | case_stmt
    | assert_stmt
    | block
    | procedure_call
    | 'return'
    | result_stmt
    | new_stmt
    | free_stmt
    | tag_stmt
    | quit_stmt

func_stmt:
    | open_stmt
    | close_stmt
    | put_stmt
    | get_stmt
    | read_stmt
    | write_stmt
    | seek_stmt
    | tell_stmt
    | fork_stmt
    | signal_stmt
    | wait_stmt
    | pause_stmt

