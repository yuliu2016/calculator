program:
    | statements_and_declarations

statements_and_declarations:
    | statement_or_declaration*

statement_or_declaration:
    | statement
    | declaration

statement:
    | assignment_statement
    | open_statement
    | close_statement
    | put_statement
    | get_statement
    | read_statement
    | write_statement
    | seek_statement
    | tell_statement
    | loop_statement
    | 'exit' ['when' true_false_expn]
    | if_statement
    | 'begin' statements_and_declarations 'end'
    | procedure_call
    | 'return'
    | 'result' expn
    | 'new' [collection_id ','] pointer_variable_Reference
    | 'free' [collection_id ','] pointer_variable_Reference
    | 'tag' union_variable_reference ',' expn
    | fork_statement
    | 'signal' variable_reference
    | 'wait' variable_reference
    | 'pause' expn
    | 'quit' [guilty_party] [':' quit_reason]
    | 'unchecked'
    | 'checked'

declaration:
    | variable_declaration
    | constant_declaration
    | type_declaration
    | bind_declaration
    | procedure_declaration
    | function_declaration
    | module_declaration
    | class_declaration
    | process_declaration
    | monitor_declaration
    | condition_declaration

