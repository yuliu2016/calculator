# Meta Grammar

rules:
    | [NEWLINE] single_rule+
single_rule:
    | NAME ':' [NEWLINE '|'] or_rule NEWLINE
or_rule:
    | and_rule ([NEWLINE] '|' and_rule)*
and_rule:
    | repeat+
repeat:
    | delimited
    | item '*'
    | item '+'
    | item
item:
    | group
    | optional
    | NAME
    | STRING
group:
    | '(' or_rule ')'
optional:
    | '[' or_rule ']'
delimited:
    | STRING '.' item '+'
